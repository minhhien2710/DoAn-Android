<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#98BDDA"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="50dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            app:srcCompat="@drawable/logo_altp" />

        <EditText
            android:layout_marginBottom="5dp"
            android:id="@+id/txtTK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/txt_border"
            android:ems="10"
            android:hint="Tên đăng nhập"
            android:inputType="textPersonName" />

        <EditText
            android:layout_marginBottom="20dp"
            android:id="@+id/txtMK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/txt_border"
            android:ems="10"
            android:hint="Mật khẩu"
            android:inputType="textPersonName" />

        <Button
            android:layout_marginBottom="5dp"
            android:id="@+id/btnDangNhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_radius_blue"
            android:text="Đăng nhập"
            android:textColor="#F7F1F1" />

        <Button
            android:layout_marginBottom="5dp"
            android:id="@+id/btnDangky"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_radius_blue"
            android:text="Đăng ký"
            android:textColor="#F1F4F7"/>
        <Button
            android:layout_marginBottom="5dp"
            android:id="@+id/btnQuenMK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_radius_blue"
            android:text="Quên mật khẩu"
            android:textColor="#F1F4F7"/>
        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_radius_blue"/>

    </LinearLayout>

</RelativeLayout>