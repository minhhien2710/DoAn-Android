<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HienThiCauHoi">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="King Kong" />

            <TextView
                android:id="@+id/txtCredit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="2000"
                android:textAlignment="center" />

            <ImageButton
                android:id="@+id/btnMuaCredit"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="#B3897B"
                app:srcCompat="@android:drawable/btn_star_big_on" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Điểm: 0"
            android:textAlignment="center"
            android:textColor="#B41D11"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="Câu hỏi"
            android:textAlignment="center"
            android:textColor="#03A9F4"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtSttCau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="165dp"
            android:background="#76BEC7"
            android:paddingLeft="30dp"
            android:paddingTop="20dp"
            android:paddingRight="30dp"
            android:paddingBottom="20dp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtCauHoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnPhuongAnA"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:background="#51A1E0"
            android:paddingLeft="10dp"
            android:text="A."
            android:textAlignment="textStart"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnPhuongAnB"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:background="#51A1E0"
            android:paddingLeft="10dp"
            android:text="B."
            android:textAlignment="textStart"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnPhuongAnC"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:background="#51A1E0"
            android:paddingLeft="10dp"
            android:text="C."
            android:textAlignment="textStart"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnPhuongAnD"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:background="#51A1E0"
            android:paddingLeft="10dp"
            android:text="D."
            android:textAlignment="textStart"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="10dp"
            android:background="#009688"
            android:onClick="OnNext"
            android:text="Next"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>