<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#98BDDA"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:orientation="vertical">


        <ImageView
            android:layout_marginLeft="50dp"
            android:id="@+id/imageView3"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/ic_no_image" />

        <TextView
            android:id="@+id/txtUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên tài khoản"
            android:textAlignment="center"
            android:layout_marginBottom="4dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/play_layout_txt_money"
                android:src="@drawable/atp__activity_profile_icon_money" />

            <TextView
                android:id="@+id/play_layout_txt_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Credit"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <Button
            android:id="@+id/btnProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:background="@drawable/btn_radius_red"
            android:text="Quản lý tài khoản"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnNewGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:background="@drawable/btn_radius_blue"
            android:onClick="btnNewGame"
            android:text="Trò chơi mới"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

        <Button
            android:background="@drawable/btn_radius_green"
            android:id="@+id/btnHistory"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lịch sử chơi"
            android:layout_marginBottom="4dp"
            android:textColor="#FFFFFF"/>

        <Button
            android:background="@drawable/btn_radius_yell"
            android:id="@+id/btnBXH"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bảng xếp hạng"
            android:layout_marginBottom="4dp"
            android:textColor="#FFFFFF"/>

        <Button
            android:background="@drawable/btn_radius_pur"
            android:id="@+id/btnBuyCredit"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mua Credit"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</RelativeLayout>